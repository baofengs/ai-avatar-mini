page {
  height: 100vh;
}

.container {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
}

.header {
  position: relative;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  height: 60px;
  background-color: rgb(249, 249, 249);
}

.header .btn-wrp {
  position: absolute;
  left: 0;
  height: 100%;
  padding: 0 32rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.header .btn {
  width: 30px;
  height: 30px;
  border: 1px solid #ccc;
  border-radius: 15px;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 18px;
}

.empty {
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 20px;
  flex: 1;
}

.left-icon {
  transform: rotate(90deg);
}

.header .icon {
  width: 20px;
  height: 20px;
}

.item {
  display: flex;
  align-items: center;
  padding: 20px;
  font-size: 16px;
  border-top: 1px solid rgba(0, 0, 0, 0.15);
}
